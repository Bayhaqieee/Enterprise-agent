# LOCAL DEVELOPMENT (RECOMMENDED FOR LEARNING)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=YOUR_MODEL_HERE
USE_LOCAL_MODELS=true

# GOOGLE AI STUDIO (PRIMARY CLOUD OPTION)
# GOOGLE_API_KEY=your-google-api-key-here
# GOOGLE_MODEL=gemini-1.5-flash

# OPENAI (ALTERNATIVE CLOUD OPTION)
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4o-mini

# ANTHROPIC (ALTERNATIVE CLOUD OPTION)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-haiku-20240307

# AZURE OPENAI (ENTERPRISE OPTION)
AZURE_OPENAI_API_KEY=YOUR_AZURE_API_KEY_HERE
AZURE_OPENAI_ENDPOINT=YOUR_AZURE_ENDPOINT_HERE
AZURE_OPENAI_API_VERSION=YOUR_AZURE_API_VERSION_HERE
AZURE_DEPLOYMENT_NAME=YOUR_AZURE_DEPLOYMENT_NAME_HERE

# SMART PROVIDER SELECTION
# Options: "local", "google", "openai", "anthropic", "azure"
PREFERRED_PROVIDER=local
FALLBACK_PROVIDER=azure

# COST TRACKING & LIMITS
MONTHLY_BUDGET_LIMIT=50.00
COST_TRACKING_ENABLED=true
ALERT_THRESHOLD_PERCENT=80

# DEVELOPMENT SETTINGS
PROJECT_NAME=google-adk-enterprise-agents
DEBUG=False
LOG_LEVEL=INFO
TEMPERATURE=0.7
MAX_TOKENS=1000

# SECURITY SETTINGS
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60
ENABLE_CONTENT_FILTERING=true

# COURSE SPECIFIC
COURSE_MODE=development
ENABLE_DETAILED_LOGGING=true